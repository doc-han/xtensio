{
  "name": "xtensio",
  "version": "0.4.5",
  "description": "A browser extension development tool",
  "main": "./.build/index.js",
  "author": "Farhan Yahaya",
  "license": "MIT",
  "types": "./index.d.ts",
  "bin": {
    "xtensio": "./bin/xtensio"
  },
  "files": [
    ".build",
    "bin",
    "types",
    "statics",
    "index.d.ts",
    "tsconfig.json",
    "README.md"
  ],
  "scripts": {
    "build": "yarn tsc && cp -r ./template ./.build/src/ && cp -r ../../README.md ./ && cp -r ../../statics ./",
    "clean": "rm -rf ./statics ./README.md",
    "exec": "yarn build && ./bin/xtensio",
    "push": "yarn build && npm publish && yarn clean",
    "lint": "prettier . --check",
    "lint:fix": "prettier . --write"
  },
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "@babel/core": "^7.22.8",
    "@babel/preset-env": "^7.22.7",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@inquirer/prompts": "^2.3.0",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.11",
    "babel-loader": "^9.1.3",
    "babel-preset-react-app": "^10.0.1",
    "cors": "^2.8.5",
    "css-loader": "^6.8.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "file-loader": "^6.2.0",
    "handlebars": "^4.7.7",
    "html-webpack-plugin": "^5.5.3",
    "jsdom": "^22.1.0",
    "listr": "^0.14.3",
    "loader-utils": "^3.2.1",
    "lodash": "^4.17.21",
    "mini-css-extract-plugin": "^2.7.6",
    "pkg-install": "^1.0.0",
    "postcss": "^8.4.47",
    "postcss-loader": "^8.1.1",
    "react": "^18.2.0",
    "react-refresh": "^0.14.0",
    "sass": "^1.63.6",
    "sass-loader": "^13.3.2",
    "schema-utils": "^4.2.0",
    "sinon-chrome": "^3.0.1",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "web-ext": "^7.6.2",
    "webpack": "^5.88.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-middleware": "^6.1.1",
    "webpack-hot-middleware": "^2.25.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsdom": "^21.1.1",
    "@types/listr": "^0.14.4",
    "@types/loader-utils": "^2.0.3",
    "@types/lodash": "^4.14.195",
    "@types/node": "^20.4.1",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "@types/react-refresh": "^0.14.0",
    "@types/schema-utils": "^2.4.0",
    "@types/webpack": "^5.28.1",
    "@types/webpack-hot-middleware": "^2.25.6",
    "prettier": "3.0.0"
  }
}
